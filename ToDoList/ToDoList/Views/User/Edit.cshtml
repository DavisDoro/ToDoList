@model ToDoList.Models.User

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Edit User</h2>
        </div>
        <div class="col-12">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Username"></label>
                </div>
                <div class="col-3">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-3">


                </div>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>

                </div>
                <div class="col-3">

                    <input asp-for=" Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 text-center row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Save" />
                    </div>
                    <div class="col">
                        <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

