@model IEnumerable<ToDoList.Models.User>


<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">USer List</h2>
        </div>

    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>


                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td width="10%">@user.Username</td>
                        <td width="30%">@user.Email</td>

                        <td width="10%">
                            <div class="w-50 btn-group ">

                                <a asp-controller="User" asp-action="DeletePost" asp-route-Id="@user.Id" class="btn btn-primary ">Delete</a>
                            </div>
                        </td>
                        <td width="10%">
                            <div class="w-100 btn-group ">

                                <a asp-controller="User" asp-action="Edit" asp-route-Id="@user.Id" class="btn btn-warning ">Edit</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
