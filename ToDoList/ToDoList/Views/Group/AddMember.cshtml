@model ToDoList.ViewModel.AddMember
@{
    var error = TempData["Error"] as string;
    Html.HiddenFor(m => m.GroupId);
}
@if (!string.IsNullOrEmpty(error))
{
    <h5 class="alert-danger" style="padding:20px;">@error</h5>
}
<form method="post" asp-action="AddMember">

    <div class="form-group row">
        <h2 class="text-black-50 pl-3"> <span class="text-success">@Model.GroupName</span>: Add Member</h2>
    </div>
    <div class="col-12">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col">

                    <input type="submit" class="btn btn-success w-200 mx-1" value="Add Member" />
                </div>
                <div class="col">
                    <a class="btn btn-danger w-100 mx-1" asp-action="Index">Back</a>
                </div>
                @Html.HiddenFor(m => m.GroupId)
            </div>
        </div>
    </div>
</form>


