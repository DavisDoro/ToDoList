@model ToDoList.Models.Group;

<form method="post" asp-action="DeleteGroup">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Group</h2>
        </div>
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <label asp-for="Description"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 rounded">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="col-6 rounded">
                    <input asp-for="Description" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 text-center row">
                    <div class="col">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col">
                        <a class="btn btn-success w-100" asp-action="Index">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    }
}