@model ToDoList.Models.Item

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ItemName"></label>
                </div>
                <div class="col-4">
                    <label asp-for="ItemDescription"></label>
                </div>
                <div class="col-4">
                    <label asp-for="ResponsibleUser"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <input asp-for="ItemName" class="form-control" />
                </div>
                <div class="col-4">
                    <input asp-for="ItemDescription" class="form-control" />
                </div>
                <div class="col-4">
                    <input asp-for="ResponsibleUser" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 text-center row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="create" />
                    </div>
                    <div class="col">
                        <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

